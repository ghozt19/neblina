{
	"$schema": "https://biomejs.dev/schemas/2.2.2/schema.json",
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"style": {
				"noNonNullAssertion": "off"
			},
			"suspicious": {
				"noExplicitAny": "error"
			},
			"correctness": {
				"noConstantCondition": "off"
			}
		}
	},
	"formatter": {
		"enabled": true,
		"lineWidth": 80
	},
	"files": {
		"includes": [
			"**/src/**/*.{js,ts,vue,json}",
			"**/*.{js,ts,vue,json}",
			"!**/node_modules",
			"!**/dist",
			"!**/build",
			"!**/.git",
			"!**/public/wasm_exec.js",
			"!**/public/*.wasm",
			"!**/go"
		]
	},
	"overrides": [
		{
			"includes": ["**/*.vue"],
			"linter": {
				"rules": {
					"style": {
						"useConst": "off"
					},
					"correctness": {
						"noUnusedVariables": "off",
						"noUnusedImports": "off"
					}
				}
			}
		}
	]
}
